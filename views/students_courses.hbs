<h1>Students Courses</h1>

{{!-- READ table --}}
<table>
    <thead>
        <tr>
            {{#each students_courses.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{#each students_courses}}
        <tr>
            <td>{{enrollmentID}}</td>
            <td>{{studentID}}</td>
            <td>{{courseID}}</td>
            <td>{{gradeID}}</td>
            <td>
                <form action="/Students_Courses/delete" method="post" style="display:inline;">
                    <input type="hidden" name="enrollmentID" value="{{enrollmentID}}" />
                    <button>Delete</button>
                </form>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h2>Create a Student Course</h2>
<form id="create_student_course_form" action="/Students_Courses" method="post">
    <label>Enrollment ID:
        <input name="enrollmentID" type="number" min="0" required />
    </label>
    <label>Student ID:
        <input name="studentID" type="number" min="0" required />
    </label>
    <label>Course ID:
        <input name="courseID" type="number" min="0" required />
    </label>
    <label>Grade ID:
        <input name="gradeID" type="number" min="0" required />
    </label>
    <button>Add</button>
</form>

<h2>Update Students Courses</h2>
<form id="update_student_course_form" action="/Students_Courses/update" method="post">
    <label>Enrollment to Update:
        <select name="enrollmentID" required>
            <option value="" disabled selected>Select an Enrollment ID</option>
            {{#each students_courses}}
            <option value="{{enrollmentID}}">{{enrollmentID}}</option>
            {{/each}}
        </select>
    </label>
    <label>New Student ID:
        <select name="studentID" required>
            <option value="" disabled selected>Select a Student ID</option>
            {{#each students_courses}}
            <option value="{{studentID}}">{{studentID}}</option>
            {{/each}}
        </select>
    </label>
    <label>New Course ID:
        <select name="courseID" required>
            <option value="" disabled selected>Select a Course ID</option>
            {{#each students_courses}}
            <option value="{{courseID}}">{{courseID}}</option>
            {{/each}}
        </select>
    </label>
    <label>New Grade ID:
        <select name="gradeID" required>
            <option value="" disabled selected>Select a Grade ID</option>
            {{#each students_courses}}
            <option value="{{gradeID}}">{{gradeID}}</option>
            {{/each}}
        </select>
    </label>
    <button>Update</button>
</form>
