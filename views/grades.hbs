<h1>Grades</h1>

<table>
    <thead>
        <tr>
            {{#each grades.[0]}}
            <th>{{@key}}</th>
            {{/each}}
            
        </tr>
    </thead>

    <tbody>
        {{#each grades}}
        <tr>
            <td>{{gradeID}}</td>
            <td>{{gradeName}}</td>
            <td>{{gradePoint}}</td>


